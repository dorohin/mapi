{
  "name": "mapi",
  "version": "1.0.0",
  "description": "The Marvel Cinematic Universe (MCU)  films repository. Example project with Node.js and GraphQL.",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "dev": "ts-node ./src/server.ts",
    "start": "nodemon --watch dist ./dist/server.js",
    "prod": "npm run build && npm run start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dorohin/mapi.git"
  },
  "keywords": [
    "marvel",
    "api",
    "graphql",
    "node.js",
    "typescript"
  ],
  "author": "dorohin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dorohin/mapi/issues"
  },
  "homepage": "https://github.com/dorohin/mapi#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "mongoose": "^5.5.9",
    "nodemon": "^1.19.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/mongoose": "^5.5.1",
    "@types/node": "^12.0.2",
    "mongodb": "^3.2.5",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
